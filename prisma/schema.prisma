generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {  
  nik      String  @id @default(uuid()) @db.VarChar(16)
  username String  @unique @db.VarChar(30)
  nama     String  @db.VarChar(100)
  alamat   String 
  password String  @db.VarChar(100)
  token    String? @db.VarChar(100)
  role     String  @default("user") @db.VarChar(20) 
  
  laporans Laporan[]
  threads  Thread[]
  replies  Reply[]

  @@map("users")
}


model Laporan {
  id             Int     @id @default(autoincrement())
  judul          String  @db.VarChar(150)
  user_nik       String  @db.VarChar(16)
  deskripsi      String
  foto           String?
  latitude       Float
  longitude      Float
  proses_laporan String  @db.VarChar(10)

  user           User    @relation(fields: [user_nik], references: [nik])

  @@map("laporans")
}


model Thread {
  id              Int       @id @default(autoincrement())
  judul           String    @db.VarChar(150)
  user_nik        String    @db.VarChar(16)
  isi             String    
  tanggal_upload  DateTime
  
  replies         Reply[]
  user            User      @relation(fields: [user_nik], references: [nik])

  @@map("threads")
}

model Reply {
  id              Int      @id @default(autoincrement())
  isi             String   @db.VarChar(255)
  user_nik         String   @db.VarChar(16)
  thread_id        Int
  parent_id        Int?
  replies         Reply[]  @relation("ReplyToReply")
  tanggal_upload   DateTime 

  user            User     @relation(fields: [user_nik], references: [nik])
  thread          Thread   @relation(fields: [thread_id], references: [id])
  parent          Reply?   @relation("ReplyToReply", fields: [parent_id], references: [id])

  @@map("replies")
}


model PostEdukasi {
  id            Int @id @default(autoincrement())
  judul         String  @db.VarChar(150)
  deskripsi     String  @db.VarChar(255)
  isi           String
  publisher     String  @db.VarChar(50)
  tanggal_upload DateTime

  @@map("post_edukasi")
}

model Ahli {
  id      Int @id @default(autoincrement())
  nama    String @db.VarChar(100)
  bidang  String @db.VarChar(50)
  nomor_WA String @db.VarChar(20)

  @@map("ahli")
}